# InventoryPro Environment Configuration
# Copy this file to .env and update the values for your deployment

# ===============================================
# DATABASE CONFIGURATION
# ===============================================
POSTGRES_DB=inventorypro
POSTGRES_USER=postgres
POSTGRES_PASSWORD=SecurePassword2025!
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:SecurePassword2025!@postgres:5432/inventorypro

# ===============================================
# APPLICATION SECURITY
# ===============================================
SESSION_SECRET=your_very_long_random_session_secret_key_here_change_in_production
JWT_SECRET=your_very_long_random_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# ===============================================
# EMAIL CONFIGURATION (for receipts & notifications)
# ===============================================
# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender Information
SMTP_FROM_NAME=InventoryPro
SMTP_FROM_EMAIL=noreply@inventorypro.com

# Admin Email (for system notifications)
ADMIN_EMAIL=admin@yourcompany.com

# Email Features
ENABLE_EMAIL_RECEIPTS=true
DEFAULT_RECEIPT_EXPIRY_HOURS=24

# ===============================================
# CATEGORY MANAGEMENT FEATURES
# ===============================================
ENABLE_CATEGORIES=true
ENABLE_HIERARCHICAL_CATEGORIES=true
MAX_CATEGORY_DEPTH=3

# ===============================================
# APPLICATION SETTINGS
# ===============================================
NODE_ENV=production
PORT=5000
APP_PORT=5000

# ===============================================
# FEATURE FLAGS
# ===============================================
# Email receipts for customers
ENABLE_EMAIL_RECEIPTS=true

# Category management system with abbreviations and hierarchical dependencies
ENABLE_CATEGORIES=true
ENABLE_HIERARCHICAL_CATEGORIES=true
MAX_CATEGORY_DEPTH=3

# ===============================================
# SMTP SETUP EXAMPLES
# ===============================================
# Gmail Setup (requires app password):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=youraccount@gmail.com
# SMTP_PASS=your-16-character-app-password

# Outlook/Hotmail Setup:
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_USER=youraccount@outlook.com
# SMTP_PASS=your-password

# Optional: Custom domain/URL configuration
# REPLIT_DOMAINS=your-domain.com
# ISSUER_URL=https://your-domain.com/oidc